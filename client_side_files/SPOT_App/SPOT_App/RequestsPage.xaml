<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPOT_App.RequestsPage"
             Title="Requests">
    <StackLayout>
        <StackLayout>
            <SearchBar x:Name="searchBar" FontSize="12" HorizontalOptions="Center" VerticalOptions="Center"
                       Placeholder="Search here..." PlaceholderColor="Gray" TextColor="Black" BackgroundColor="GhostWhite"
                       HeightRequest="40" SearchButtonPressed="Search_Button_Clicked"/>
           
        </StackLayout>
       
            <ListView x:Name="requests"            
                    ItemTapped="Handle_RequestTapped"            
                    CachingStrategy="RecycleElement">
            </ListView>
        
            <StackLayout Spacing="0" Padding="0" Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text ="Back" FontSize="12" Clicked="Back_Button_Clicked" HorizontalOptions="Center" 
                        VerticalOptions="Center" />
            
                <Button Text ="Next" FontSize="12" Clicked="Next_Button_Clicked" HorizontalOptions="Center" 
                        VerticalOptions="Center" />
            </StackLayout>
    </StackLayout>
</ContentPage>