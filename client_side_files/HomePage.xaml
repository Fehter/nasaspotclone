<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPOT_App.HomePage"
             Title="Home Page">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0" Padding="0">
                <StackLayout Spacing="0" Padding="10">
                    
                    <StackLayout Spacing="0" Padding="0" Orientation="Vertical">
                        <Button Text="Requests Page" Clicked="RequestsPage_Button_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Button x:Name="addUser" Text="Add User" Clicked="AddUser_Button_Clicked" HorizontalOptions="Center" VerticalOptions="Center" IsVisible ="false"/>
                        <Button Text="Logout" Clicked="Logout_Button_Clicked" HorizontalOptions="Center" VerticalOptions="End"/>
                    </StackLayout>
                    
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
